{
  "manifest_version": 3,
  "name": "YouTube Subscriptions Redirect",
  "version": "1.0",
  "description": "Redirects YouTube homepage to subscriptions. Filters channels from the feed.",
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": [
    "https://youtube.com/*",
    "https://www.youtube.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [{ "id": "ruleset_1", "enabled": true, "path": "rules.json" }]
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/feed/subscriptions*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube Filter"
  }
}
